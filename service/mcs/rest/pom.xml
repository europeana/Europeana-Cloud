            <artifactId>spring-boot-starter-web</artifactId>
            <exclusions>
                <exclusion>
                  <artifactId>spring-boot-starter-logging</artifactId>
                  <groupId>org.springframework.boot</groupId>
                </exclusion>
            </exclusions>
          <groupId>org.springframework.boot</groupId>
        </dependency>
    <dependency>
      <artifactId>spring-boot-starter-log4j2</artifactId>
      <groupId>org.springframework.boot</groupId>
    </dependency>
    <dependency>
