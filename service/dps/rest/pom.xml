    <artifactId>ecloud-service-dps-rest</artifactId>
    <name>Europeana Cloud: Data Processing Service (DPS-REST)</name>
    <properties>
        <main.directory>${project.parent.basedir}</main.directory>
    </properties>


    <build>
        <plugins>
            <plugin>
                <artifactId>spring-boot-maven-plugin</artifactId>
              <groupId>org.springframework.boot</groupId>
              <version>${version.spring-boot}</version>
              <executions>
                <execution>
                  <goals>
                    <goal>build-info</goal>
                    <goal>repackage</goal>
                  </goals>
                </execution>
              </executions>
            </plugin>
          <plugin>
            <artifactId>git-commit-id-maven-plugin</artifactId>
            <configuration>
              <dotGitDirectory>${project.parent.parent.basedir}/.git</dotGitDirectory>
              <generateGitPropertiesFile>true</generateGitPropertiesFile>
              <generateGitPropertiesFilename>${project.build.outputDirectory}/git.properties</generateGitPropertiesFilename>
              <prefix>git</prefix>
              <verbose>false</verbose>
            </configuration>
            <executions>
              <execution>
                <goals>
                  <goal>revision</goal>
                </goals>
                <id>get-the-git-infos</id>
                <phase>initialize</phase>
              </execution>
              <execution>
                <goals>
                  <goal>validateRevision</goal>
                </goals>
                <id>validate-the-git-infos</id>
                <phase>package</phase>
              </execution>
            </executions>
            <groupId>io.github.git-commit-id</groupId>
            <version>${version.git-commit-maven}</version>
          </plugin>
          <plugin>
            <artifactId>maven-jar-plugin</artifactId>
            <configuration>
              <excludes>
                <exclude>indexing.properties</exclude>
                <exclude>dps.properties</exclude>
              </excludes>
            </configuration>
            <groupId>org.apache.maven.plugins</groupId>
            <version>3.1.0</version>
          </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>zoo/</exclude>
                    <exclude>zookeeper-kafka/</exclude>
                    <exclude>tomcat/</exclude>
                </excludes>
            </resource>
        </resources>
    </build>

