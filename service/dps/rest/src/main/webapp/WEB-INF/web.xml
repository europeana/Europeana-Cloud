<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>DPS Rest API</display-name>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:*-context.xml</param-value>
    </context-param>

    <servlet>
        <servlet-name>DPS Rest API</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>eu.europeana.cloud.service.dps.rest.JerseyConfig</param-value>
        </init-param>
        
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>eu.europeana.cloud.service.uis.rest,org.codehaus.jackson.jaxrs</param-value>
        </init-param>
        <init-param>
            <param-name>org.glassfish.jersey.moxy.json.MoxyJsonFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DPS Rest API</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

