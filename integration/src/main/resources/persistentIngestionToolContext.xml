<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mockito="http://www.mockito.org/spring/mockito"
       xmlns:task="http://www.springframework.org/schema/task"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.mockito.org/spring/mockito classpath:spring/mockito.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
						http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.2.xsd">

    <context:annotation-config/>
    
    <bean id="dataProviderService"
		class="eu.europeana.cloud.service.uis.CassandraDataProviderService" />
	<bean id="dataProviderDao"
		class="eu.europeana.cloud.service.uis.database.dao.CassandraDataProviderDAO">
		<constructor-arg name="dbService" ref="dbService" />
	</bean>
	
	<bean id="dbService" class="eu.europeana.cloud.service.uis.database.DatabaseService">
		<constructor-arg name="host" value="localhost" />
		<constructor-arg name="port" value="29142" />
		<constructor-arg name="keyspaceName" value="uis_test4" />
		<constructor-arg name="username" value="" />
		<constructor-arg name="password" value="" />
		<constructor-arg name="create" value="true"/>
	</bean>
	
	<bean id="uniqueIdentifierService"
		class="eu.europeana.cloud.service.uis.PersistentUniqueIdentifierService">
		<constructor-arg name="cloudIdDao" ref="cloudIdDao" />
		<constructor-arg name="localIdDao" ref="localIdDao" />
		<constructor-arg name="dataProviderDao" ref="dataProviderDao" />
	</bean>
	<bean id="cloudIdDao" class="eu.europeana.cloud.service.uis.database.dao.CloudIdDao">
		<constructor-arg name="dbService" ref="dbService" />
	</bean>
	<bean id="localIdDao" class="eu.europeana.cloud.service.uis.database.dao.LocalIdDao">
		<constructor-arg name="dbService" ref="dbService" />
	</bean>

    <task:annotation-driven/>
    <!-- async configuration for solr indexer - in queue, single thread in executor -->
    <task:executor id="solrIndexerExecutor" pool-size="1"/>

    <!--connection provider - with options the same as in embedded cassandra-->
    <bean id="cassandraConnectionProvider"
          class="eu.europeana.cloud.service.mcs.persistent.cassandra.CassandraConnectionProvider">
        <constructor-arg name="hosts" type="java.lang.String" value="localhost"/>
        <constructor-arg name="port" type="int" value="19142"/>
        <constructor-arg name="keyspaceName" type="java.lang.String" value="ecloud_test"/>
    </bean>

    <bean id="dataSetService" class="eu.europeana.cloud.service.mcs.persistent.CassandraDataSetService"/>
    <bean id="dataSetDAO" class="eu.europeana.cloud.service.mcs.persistent.cassandra.CassandraDataSetDAO"/>

    <bean id="recordService" class="eu.europeana.cloud.service.mcs.persistent.CassandraRecordService"/>
    <bean id="recordDAO" class="eu.europeana.cloud.service.mcs.persistent.cassandra.CassandraRecordDAO"/>

    <bean id="swiftContentDAO" class="eu.europeana.cloud.service.mcs.persistent.swift.SwiftContentDAO"/>
    <bean id="swiftConnectionProvider" class="eu.europeana.cloud.service.mcs.persistent.swift.SwiftConnectionProvider">
        <constructor-arg name="provider" type="java.lang.String" value="transient"/>
        <constructor-arg name="container" type="java.lang.String" value="test_container"/>
        <constructor-arg name="endpoint" type="java.lang.String" value=""/>
        <constructor-arg name="user" type="java.lang.String" value="test_user"/>
        <constructor-arg name="password" type="java.lang.String" value="test_pwd"/>
    </bean>

    <bean id="sorlConnector" class="eu.europeana.cloud.service.mcs.mock_impl.EmbeddedSolrConnectionProvider"/>
    <bean id="solrDAO" class="eu.europeana.cloud.service.mcs.persistent.solr.SolrDAO"/>
    <bean id="solrRepresentationIndexer" class="eu.europeana.cloud.service.mcs.persistent.SolrRepresentationIndexer"/>

	<bean id="uisClientHandler"
		class="eu.europeana.cloud.integration.ServiceUISClientHandler" />
</beans>
